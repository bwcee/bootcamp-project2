<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../template/head'); %>
</head>

<body>
  <div class="d-flex start-box3" id="wrapper">
    <!-- Sidebar-->
    <div class="border-end bg-white" id="sidebar-wrapper">
      <%- include('../template/sidebar'); %>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
          <!-- Top navigation-->
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <a class="navbar-brand" href="#">Items</a>
          </nav>
          <!-- Page content-->
          <div class="container-fluid">
            <div class="table-responsive">
              <form action="/admin/items/<%= reqArr[0].id %>?_method=PUT" enctype="multipart/form-data" method="POST">
                <table class="table table-sm">
                  <tr>
                    <th style="width: 30%">Item</th>
                    <th style="width: 12%">Price </th>
                    <th style="width: 13%">Cost</th>
                    <th style="width: 25%">Category</th>
                    <th style="width: 20%">Image</th>
                  </tr>
                  <tr>
                    <td class="px-1">
                      <input class="form-control" type="text" name="item" required value="<%= reqArr[0].item %>" />
                    </td>
                    <td class="px-1">
                      <input class="form-control" type="number" name="price" step=0.01 min=0
                        value="<%= reqArr[0].price %>" />
                    </td>
                    <td class="px-1">
                      <input class="form-control" type="number" name="cost" step=0.01 min=0
                        value="<%= reqArr[0].cost %>" />
                    </td>
                    <td class="px-1">
                      <select name="cat_id">
                        <% reqArr[1].categories.forEach((el)=> { %>
                         <% if(el.id === reqArr[0].cat_id){ %>
                          <option selected="selected" value="<%= el.id %>">
                            <%= el.category %>
                          </option>
                          <% } else{ %>
                          <option value="<%= el.id %>">
                            <%= el.category %>
                          </option>
                        <% } %>
                          <% }); %>
                      </select>
                    </td>
                    <td class="px-1">
                      <input class="form-control" type="file" name="image" />
                    </td>
                  </tr>
                </table>
                <input class="btn btn-success btn-block" type="submit" value="Update Item Detail" />
              </form>
            </div>
          </div>
        </div>
    </div>
    <footer>
      <%- include('../template/footer'); %>
    </footer>
</body>

</html>